{
  "name": "home-dashboard",
  "version": "1.0.0",
  "description": "A home dashboard",
  "main": "server/index.ts",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https//github.com/nishanbajracharya/home-dashboard.git"
  },
  "scripts": {
    "start": "npm run start:server",
    "start:server": "tsx watch --tsconfig server/tsconfig.json server/index.ts",
    "prestart:server": "npm run build:client",
    "start:client": "vite --config client/vite.config.ts",
    "prebuild:server": "npm run build:client",
    "build": "npm run build:server",
    "build:server": "tsc -p server/tsconfig.json",
    "build:client": "vite build --config client/vite.config.ts",
    "test": "vitest"
  },
  "author": "Nishan Bajracharya <nisbaj11@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vite": "^7.1.3"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "express": "^5.1.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  }
}
