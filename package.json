{
  "name": "home-dashboard",
  "version": "1.0.0",
  "description": "A home dashboard",
  "main": "server/index.ts",
  "repository": {
    "type": "git",
    "url": "https//github.com/nishanbajracharya/home-dashboard.git"
  },
  "scripts": {
    "start": "npm run start:server",
    "start:server": "tsx watch --tsconfig server/tsconfig.json server/index.ts",
    "prestart:server": "npm run build:client",
    "start:client": "vite --config client/vite.config.ts",
    "prebuild:server": "npm run build:client",
    "build": "npm run build:server",
    "build:server": "tsc -p server/tsconfig.json && npm run copy-assets",
    "build:client": "vite build --config client/vite.config.ts",
    "copy-assets": "cp ./server/content.yml ./server/dist/content.yml",
    "lint": "npm run lint:client && npm run lint:server",
    "lint:client": "eslint client",
    "lint:server": "eslint server",
    "test": "vitest"
  },
  "author": "Nishan Bajracharya <nisbaj11@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.3",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "@vitejs/plugin-react": "^5.0.2",
    "eslint": "^8.57.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vite": "^7.1.3"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "yaml": "^2.8.1"
  }
}
